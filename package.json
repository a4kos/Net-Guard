{
  "name": "net-guard-electron",
  "version": "1.0.0",
  "description": "Net Guard Extension ported to Electron",
  "main": "main.js",
  "author": "Alex Genov",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "next build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "export": "next build && next export",
    "lint": "next lint"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "next": "^14.2.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.263.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.netguard.app",
    "productName": "Net Guard",
    "protocols": [
      {
        "name": "Net Guard Protocol",
        "schemes": [
          "netguard"
        ]
      }
    ],
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "electron-adapter/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "mimeTypes": [
        "x-scheme-handler/netguard"
      ]
    }
  }
}
