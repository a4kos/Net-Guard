{
  "name": "net-guard-electron",
  "version": "1.0.0",
  "description": "Net Guard Extension ported to Electron",
  "main": "main.js",
  "homepage": "./",
  "author": "Alex Genov",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run electron:dev\"",
    "dev:react": "react-scripts start",
    "electron:dev": "wait-on http://localhost:5137 && electron . --dev",
    "build": "react-scripts build && npm run electron:build",
    "electron:build": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^latest",
    "electron-builder": "^latest",
    "react-scripts": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.netguard.app",
    "productName": "Net Guard",
    "files": [
      "dist/app.exe",
      "main.js",
      "preload.js",
      "ipc-handlers.js",
      "background-service.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
